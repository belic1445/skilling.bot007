/*
MainScript.java
This file acts as the entry point for the DreamBot script and handles initialization.
*/

package main;

import org.dreambot.api.script.AbstractScript;
import org.dreambot.api.script.Category;
import org.dreambot.api.script.ScriptManifest;
import skills.*;

@ScriptManifest(name = "EliteSkillBot", author = "Nicholas", version = 1.0, description = "Advanced Bot for All Skills", category = Category.MISC)
public class MainScript extends AbstractScript {

    private AbstractScript currentSkill;

    @Override
    public void onStart() {
        log("EliteSkillBot initialized. Please select a skill to train.");
    }

    @Override
    public int onLoop() {
        if (currentSkill == null) {
            currentSkill = new Woodcutting(); // Default to Woodcutting
            currentSkill.onStart();
        }

        return currentSkill.onLoop();
    }

    @Override
    public void onExit() {
        if (currentSkill != null) {
            currentSkill.onExit();
        }
    }
}

/*
Woodcutting.java
Handles woodcutting functionality.
*/

package skills;

import org.dreambot.api.script.AbstractScript;

public class Woodcutting extends AbstractScript {
    @Override
    public void onStart() {
        log("Starting Woodcutting...");
    }

    @Override
    public int onLoop() {
        // Woodcutting logic here
        log("Chopping trees...");
        return 1000;
    }

    @Override
    public void onExit() {
        log("Woodcutting finished.");
    }
}

